{{#ember-sparkles as |chart|}}

  {{#with (ember-sparkles/parse-data data) as |parsedData|}}

    {{chart.bar-chart
      data=parsedData
      xScale=(band-scale
        (d3-array 'extent' parsedData (d3-get '0'))
        (append 0 chart.width)
        round=true
        padding=padding
      )
      yScale=(linear-scale
        (append 0 (d3-array 'max' parsedData (d3-get '1')))
        (append chart.height 0)
      )
      width=chart.width
      height=chart.height
    }}
  {{/with}}


{{/ember-sparkles}}
