<h4>Bar Chart Example</h4>

{{#ember-sparkles 500 300 as |chart|}}

  {{!-- {{#with (ember-sparkles/parse-data data.data hKey='letter' vKey='value') as |parsedData|}} --}}
    {{chart.bar-chart
      data=data.data
      hKey='letter'
      vKey='value'
      horizontal-scale=(band-scale
        (map-by 'letter' data.data)
        (append 0 chart.width)
        round=true
        padding=padding
      )
      vertical-scale=(linear-scale
        (append 0 (d3-array 'max' data.data (d3-get 'value')))
        (append chart.height 0)
        nice=true
      )
      ticks=5
      tick-format='%Y-%m-%d'
      width=chart.width
      height=chart.height
    }}
  {{!-- {{/with}} --}}

{{/ember-sparkles}}


<button {{action 'toggleData'}}>Toggle Data</button>
